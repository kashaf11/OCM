<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kashaf.ocm.fyp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="OCM"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".Activities.activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".Activities.activities.LoginActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Activities.activities.UserDashboardActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Activities.activities.MechanicSignUpActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Activities.activities.MechanicDashboard"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Activities.activities.AdminDashboardActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Activities.activities.HomeScreenActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Activities.activities.UserSignUpActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>